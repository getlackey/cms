<div class="element element-{name} row">
	<div class="small-12 columns">
		<label>{label}: </label>
		<input 
			type="password" 
			name="{name}" 
			placeholder="enter password" 
			ng-model="formItem.{name}" 
			value="{value}" 
			{#required}required{/required} 
			{#pattern}pattern="{.}"{/pattern} 
		/>
	</div>
</div>