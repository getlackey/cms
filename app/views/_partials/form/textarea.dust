<div class="element element-{name} row">
    <div class="small-3 columns">
        <label>{label}: </label>
    </div>
    <div class="small-9 columns">
        <textarea 
            name="{name}" 
            placeholder="{name}" 
            ng-model="formItem.{name}" 
            {#required}required{/required} 
            {#pattern}pattern="{.}"{/pattern} 
        >
            {value|s}
        </textarea>
    </div>
</div>